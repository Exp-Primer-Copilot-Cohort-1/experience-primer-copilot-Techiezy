{
    "name": "My Extension",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
      "notifications",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }